<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeFilmDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#aaa" >

        <Button
            android:id="@+id/backFilmDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@null"
            android:text="返回"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/titleNameFilmDetils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:text="重返20岁"
            android:textColor="#5af"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFilmDetails"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/relativeFilmDetails"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/liner2Details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineFilmDetails"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lineTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackline"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pictureFilmDetils"
                android:layout_width="110sp"
                android:layout_height="130sp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/filmNameFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmScoreFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmLengthFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmDirectorFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmNationFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmActorsFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/filmTagsFilmDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner2Details"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackline"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/filmWDFilmDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影片介绍:" />

            <TextView
                android:id="@+id/filmMessageFilmDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative1_Content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#aaa" >

        <Button
            android:id="@+id/backContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@null"
            android:text="返回"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:text="@string/result_expressage"
            android:textColor="#faa"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineContent"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/relative1_Content"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/liner2Content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineContent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/contentTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackline"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/isbnName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a6a"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/isbnNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#23f"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#23f"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#23f"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/translator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#23f"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#23f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/binding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#23f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#23f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pubDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#23f"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/authorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner2Content"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="8sp"
        android:background="@drawable/blackline"
        android:scrollbars="vertical"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:singleLine="false" />

</RelativeLayout>
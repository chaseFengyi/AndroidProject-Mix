<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin" >

    <RelativeLayout
        android:id="@+id/relative1_Isbn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/backISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@null"
            android:text="返回"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:text="@string/isbn_search"
            android:textColor="#faa"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineIsbn"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/relative1_Isbn"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineIsbn"
        android:layout_marginTop="40sp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/inputIsbn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:hint="输入isbn编号如9787533935498"
            android:inputType="text" />

        <Button
            android:id="@+id/searchISBN"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@color/deepSkyBlue"
            android:text="@string/search" />
    </LinearLayout>

</RelativeLayout>
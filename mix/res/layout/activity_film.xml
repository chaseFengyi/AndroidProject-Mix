<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin" >

    <RelativeLayout
        android:id="@+id/relativeFilm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/backFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@null"
            android:text="返回"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:text="@string/film_search"
            android:textColor="#faa"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineFilm"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/relativeFilm"
        android:layout_marginTop="5dip"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineFilm"
        android:layout_marginTop="40sp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/inputCityFilm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:hint="请输入相应城市方便查找对应影片信息"
            android:inputType="text" />

        <Button
            android:id="@+id/searchFilm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@color/deepSkyBlue"
            android:text="@string/search" />
    </LinearLayout>

</RelativeLayout>